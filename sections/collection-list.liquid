                  style="color: {{ price_color }}; font-size: {{ section.settings.price_font_size | default: '16px' }}; font-weight: {{ section.settings.price_font_weight | default: '700' }}; text-align: {{ section.settings.price_alignment | default: 'left' }};"
                >
                  {{- product.price | money -}}
                </span>
                {% if product.compare_at_price > product.price %}
                  <span
                    class="text-muted text-line-through fs-14"
                    style="color: #8D979E; text-decoration: line-through;"
                  >
                    {{- product.compare_at_price | money -}}
                  </span>
                {% endif %}
              </div>
              <div class="flex align-center gap-6" style="padding-bottom: 2px;">
                {% if first_variant.inventory_quantity > 10 %}
                  <span
                    class="fs-13"
                    style="color: #008A00; font-size: {{ section.settings.stock_font_size | default: '13px' }}; font-weight: {{ section.settings.stock_font_weight | default: '600' }}; text-align: {{ section.settings.stock_alignment | default: 'left' }};"
                    >In stock: {{ first_variant.inventory_quantity -}}
                  </span>
                {% else %}
                  <span
                    class="fs-13"
                    style="color: #FF4F03; font-size: {{ section.settings.stock_font_size | default: '13px' }}; font-weight: {{ section.settings.stock_font_weight | default: '600' }}; text-align: {{ section.settings.stock_alignment | default: 'left' }};"
                    >Only {{ first_variant.inventory_quantity }} left in stock</span
                  >
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

