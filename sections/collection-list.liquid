              <div class="flex align-center gap-6 mb-2" style="padding-bottom: 6px;">
                <span
                  class="fw-700 fs-16"
                  style="color: {{ price_color }}; font-size: {{ section.settings.price_font_size | default: '16px' }}; font-weight: {{ section.settings.price_font_weight | default: '700' }}; text-align: {{ section.settings.price_alignment | default: 'left' }};"
                >
                  {{- product.price | money -}}
                </span>
                {% if product.compare_at_price > product.price %}
                  <span
                    class="text-muted text-line-through fs-14"
                    style="color: #8D979E; text-decoration: line-through;"
                  >
                    {{- product.compare_at_price | money -}}
                  </span>
                {% endif %}
              </div>
              <div class="flex align-center gap-6" style="padding-bottom: 2px;">
                {% if first_variant.inventory_quantity > 10 %}
                  <span
                    class="fs-13"
                    style="font-size: {{ section.settings.stock_font_size | default: '13px' }}; font-weight: {{ section.settings.stock_font_weight | default: '600' }}; text-align: {{ section.settings.stock_alignment | default: 'left' }};"
                    ><span style="color: #008A00;">In stock:</span> {{ first_variant.inventory_quantity -}}
                    product
                  </span>
                {% else %}
