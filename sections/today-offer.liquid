{{ 'countdown.css' | asset_url | stylesheet_tag }}
<div class="todays-offer-section container-fluid {{ settings.scroll_animation }}">
  <div class="{{ section.settings.section_width }}">
    <div
      class="todays-offer-grid flex flex-wrap justify-center align-items-stretch"
      style="justify-content: space-between; gap: 5px;"
    >
      <!-- Left side products -->
      <div class="todays-offer-side grid grid-cols-2 flex-1" style="max-width: 480px; min-width: 320px;">
        {% assign left_collection = collections[section.settings.side_collection_left] %}
        {% if left_collection %}
          {% for product in left_collection.products limit: 4 %}
            {% assign first_variant = product.variants.first %}
            {% assign price_color = '#2B38D1' %}
            {% if product.price < 20000 %}
              {% assign price_color = '#DC323C' %}
            {% endif %}
            <div
              class="todays-offer-side-item bg-white rounded-8 p-16 flex flex-col justify-between shadow-sm"
              style="color: {{ settings.color_text | default: section.settings.text_color | default: '#222' }};"
            >
              <div class="relative mb-10">
                <a href="{{ product.url }}" class="block">
                  <img
                    src="{{ product.featured_image | img_url: '240x' }}"
                    alt="{{ product.title }}"
                    class="w-full rounded-6"
                    loading="lazy"
                    width="240px"
                    height="240px"
                  >
                  {% if section.settings.show_badge_sale and product.tags contains 'sale' %}
                    <span
                      class="offer-badge badge badge-danger"
                      style="position:absolute;top:8px;left:8px;z-index:2;background:{{ section.settings.badge_color | default: '#e53935' }};"
                      >-20%</span
                    >
                  {% endif %}
                  {% if section.settings.show_badge_new and product.tags contains 'new' %}
                    <span
                      class="offer-badge badge badge-info"
                      style="position:absolute;top:8px;right:8px;z-index:2;background:#2B38D1;"
                      >New</span
                    >
                  {% endif %}
                </a>
              </div>
              <div class="fw-600 fs-15 mb-2 line-clamp-2" style="padding-bottom: 6px;">{{ product.title }}</div>
