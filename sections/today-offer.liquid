<div
  class="todays-offer-section container-fluid py-40"
  style="max-width: 100vw; background: {{ section.settings.background_color | default: '#fff' }}; color: {{ section.settings.text_color | default: '#222' }};"
>
  <div class="todays-offer-grid flex flex-wrap gap-32 justify-center align-items-stretch">
    <!-- Left side products -->
    <div class="todays-offer-side grid grid-cols-2 gap-16 flex-1" style="max-width: 400px; min-width: 320px;">
      {% for product in section.settings.side_products_left limit: 4 %}
        <div
          class="todays-offer-side-item bg-white rounded-8 p-12 flex flex-col justify-between shadow-sm"
          style="color: {{ section.settings.text_color | default: '#222' }};"
        >
          <div class="relative mb-8">
            <a href="{{ product.url }}" class="block">
              <img
                src="{{ product.featured_image | img_url: '240x' }}"
                alt="{{ product.title }}"
                class="w-full rounded-6"
                loading="lazy"
                width="240px"
                height="240px"
              >
              {% if product.compare_at_price > product.price %}
                <span class="offer-badge badge badge-danger" style="position:absolute;top:8px;left:8px;z-index:2;"
                  >-
                  {{- 100 | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -}}
                  %</span
                >
              {% endif %}
            </a>
          </div>
          <div class="fw-600 fs-15 mb-2 line-clamp-2">{{ product.title }}</div>
          <div class="flex align-center gap-6 mb-2">
            {% render 'review', product: product %}
            <span class="fs-13 text-muted">({{ product.metafields.reviews.rating_count | default: 0 }})</span>
            {% if product.metafields.reviews.rating != blank %}
              <span class="fs-13 text-warning ms-1">{{ product.metafields.reviews.rating | round: 1 }}/5</span>
            {% endif %}
          </div>
          <div class="flex align-center gap-6 mb-2">
            <span
              class="fw-700 fs-16"
              style="background: {{ section.settings.price_bg_color | default: '#fff' }}; padding: 2px 8px; border-radius: 4px; color: {% if product.compare_at_price < product.price %}#e53935{% else %}#008A00{% endif %};"
            >
              {{- product.price | money -}}
            </span>
            {% if product.compare_at_price > product.price %}
              <span class="text-muted text-line-through fs-14">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
          <div class="flex align-center gap-6">
            <span class="fs-13 text-muted">In stock: {{ product.inventory_quantity | default: 0 }}</span>
            {% if product.inventory_quantity > 10 %}
              <span class="stock-check-icon" title="In stock">
                <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.252 0.251953L4.25 6.25391L1.74805 3.75195C1.62956 3.64258 1.48828 3.58789 1.32422 3.58789C1.16927 3.58789 1.03711 3.64258 0.927734 3.75195C0.809245 3.87044 0.75 4.01172 0.75 4.17578C0.75 4.33073 0.809245 4.46289 0.927734 4.57227L3.83984 7.49805C3.94922 7.60742 4.08594 7.66211 4.25 7.66211C4.41406 7.66211 4.55078 7.60742 4.66016 7.49805L11.0723 1.07227C11.1908 0.962891 11.25 0.830729 11.25 0.675781C11.25 0.511719 11.1908 0.370443 11.0723 0.251953C10.9629 0.142578 10.8262 0.0878906 10.6621 0.0878906C10.5072 0.0878906 10.3704 0.142578 10.252 0.251953Z" fill="#008A00"/>
                </svg>
              </span>
            {% else %}
              <span class="stock-check-icon" title="Low stock">
                <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.252 0.251953L4.25 6.25391L1.74805 3.75195C1.62956 3.64258 1.48828 3.58789 1.32422 3.58789C1.16927 3.58789 1.03711 3.64258 0.927734 3.75195C0.809245 3.87044 0.75 4.01172 0.75 4.17578C0.75 4.33073 0.809245 4.46289 0.927734 4.57227L3.83984 7.49805C3.94922 7.60742 4.08594 7.66211 4.25 7.66211C4.41406 7.66211 4.55078 7.60742 4.66016 7.49805L11.0723 1.07227C11.1908 0.962891 11.25 0.830729 11.25 0.675781C11.25 0.511719 11.1908 0.370443 11.0723 0.251953C10.9629 0.142578 10.8262 0.0878906 10.6621 0.0878906C10.5072 0.0878906 10.3704 0.142578 10.252 0.251953Z" fill="#E53935"/>
                </svg>
              </span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    <!-- Main featured product -->
    <div
      class="todays-offer-main border rounded-10 p-40 flex-2 bg-white shadow-md"
      style="max-width: 520px; min-width: 340px; color: {{ section.settings.text_color | default: '#222' }};"
    >
      <div class="todays-offer-badge mb-10">
        {% if section.settings.main_badge != blank
          or section.settings.main_product.compare_at_price > section.settings.main_product.price
        %}
          <span class="badge badge-danger">
            {% if section.settings.main_badge != blank %}{{ section.settings.main_badge }}{% endif %}
            {% if section.settings.main_product.compare_at_price > section.settings.main_product.price -%}
              -
              {{-
                100
                | minus: section.settings.main_product.price
                | times: 100.0
                | divided_by: section.settings.main_product.compare_at_price
                | round
              -}}
              %
            {%- endif %}
          </span>
        {% endif %}
      </div>
      <div class="todays-offer-title mb-10 fs-22 fw-700">{{ section.settings.main_title }}</div>
      <div class="todays-offer-image mb-20 text-center">
        <a href="{{ section.settings.main_product.url }}">
          <img
            src="{{ section.settings.main_product.featured_image | img_url: '480x' }}"
            alt="{{ section.settings.main_product.title }}"
            width="420"
            height="420"
            class="rounded-8 mx-auto"
          >
        </a>
      </div>
      <div class="todays-offer-product-title mb-5 fw-600 fs-18 text-center">
        <a href="{{ section.settings.main_product.url }}">{{ section.settings.main_product.title }}</a>
      </div>
      <div class="todays-offer-rating mb-5 flex align-center justify-center gap-6">
        {% render 'review', product: section.settings.main_product %}
        <span class="fs-14 text-muted"
          >({{ section.settings.main_product.metafields.reviews.rating_count | default: 0 }})</span
        >
        {% if section.settings.main_product.metafields.reviews.rating != blank %}
          <span class="fs-14 text-warning ms-1">
            {{- section.settings.main_product.metafields.reviews.rating | round: 1 }}/5</span
          >
        {% endif %}
      </div>
      <div class="todays-offer-price mb-10 text-center">
        <span
          class="fs-24 fw-700"
          style="background: {{ section.settings.price_bg_color | default: '#fff' }}; padding: 2px 12px; border-radius: 4px; color: {% if section.settings.main_product.compare_at_price < section.settings.main_product.price %}#e53935{% else %}#008A00{% endif %};"
        >
          {{- section.settings.main_product.price | money -}}
        </span>
        {% if section.settings.main_product.compare_at_price > section.settings.main_product.price %}
          <span class="text-muted text-line-through ms-2 fs-16">
            {{- section.settings.main_product.compare_at_price | money -}}
          </span>
        {% endif %}
      </div>
      <div class="todays-offer-countdown mb-10 text-center">
        <countdown-timer
          data-endtime="{{ section.settings.countdown_endtime }}"
          data-format="dd:hh:mm:ss"
          data-days="Days"
          data-hours="Hours"
          data-mins="Min"
          data-secs="Sec"
        ></countdown-timer>
      </div>
      <div class="todays-offer-progress mb-10">
        <div class="progress-bar" style="height: 10px; background: #eee; border-radius: 10px;">
          <div
            style="width: {{ section.settings.progress_percent }}%; background: #e53935; height: 100%; border-radius: 10px;"
          ></div>
        </div>
        <div class="fs-13 mt-2 text-center">Sold: {{ section.settings.sold }}/{{ section.settings.total }}</div>
      </div>
      <div class="todays-offer-buy mt-20 text-center">
        <a href="{{ section.settings.main_product.url }}" class="btn btn-primary w-full">Buy Now</a>
      </div>
    </div>
