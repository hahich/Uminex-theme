{% # theme-check-disable ContentForHeaderModification %}
{%- liquid
  assign theme_st = settings
  assign search_type = theme_st.search_type
-%}
{% liquid
  assign enable_rtl = settings.rtl
  assign iso_code = request.locale.iso_code
  assign lis_language_rtl = settings.language_rtl
  if lis_language_rtl != blank
    if lis_language_rtl contains iso_code
      assign enable_rtl = true
    else
      assign enable_rtl = false
    endif
  endif
%}
{% if search_type == 'default' or search_type == 'popup' %}
  {{ 'search-type-default.css' | asset_url | stylesheet_tag }}
{% endif %}
<div class="header_search {% if type == 'header_mega' %}header_search-mega{% endif %}">
  <div class="block block-quick-search block-search predictive_search_suggest search_{{ search_type }}{% if search_type == 'default' %} search-type-default me-md-10{% endif %}">
    <div class="search-modal search-full">
      <div class="search-modal__content">
        <form
          method="get"
          action="/search"
          class="custom-search-bar"
          role="search"
          style="margin:auto; max-width: 80%;"
        >
          <div class="search-bar-flex">
            <select name="collection" id="collection-select" class="search-bar-select">
              <option value="">All Categories</option>
              {%- for collection in collections -%}
                <option value="{{ collection.handle }}">{{ collection.title }}</option>
              {%- endfor -%}
            </select>
            <input
              type="search"
              name="q"
              class="search-bar-input"
              placeholder="Search in 200+ products..."
              aria-label="Search"
              required
            >
            <button type="submit" class="search-bar-btn">Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .search-bar-flex {
    position: relative;
    display: flex;
    align-items: center;
    border: 2px solid #E5E8EC;
    border-radius: 12px;
    overflow: hidden;
    background: #fff;
    height: 52px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    max-width: 800px;
  }
  .search-bar-flex::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 22%;
    width: 14px;
    height: 14px;
    pointer-events: none;
    background-image: url({{ 'arrow-down.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    transform: translateY(-50%);
  }
  .search-bar-select {
    border: none;
    background: transparent;
    padding: 0 20px;
    font-weight: 600;
    font-size: 1.4rem;
    height: 100%;
    max-width: 150px;
    cursor: pointer;
    outline: none;
    color: #212529;
    appearance: none;
    -webkit-appearance: none !important;
    -moz-appearance: none;
    -ms-appearance: none;
    -o-appearance: none;
  }
  .search-bar-input {
    flex: 1;
    border: none !important;
    outline: none;
    font-size: 1.3rem;
    padding: 0 20px;
    background: transparent;
    height: 100%;
    color: #8D979E;
  }
  .search-bar-btn {
    background: #2B38D1;
    color: #fff;
    border: none;
    font-weight: 600;
    font-size: 1.4rem;
    padding: 0 36px;
    height: 100%;
    cursor: pointer;
    border-radius: 0 12px 12px 0;
    transition: background 0.2s;
    box-shadow: none;
  }
  .search-bar-btn:hover {
    background: #0039cb;
  }
  @media (max-width: 991px) {
    .header_search {
      width: 100%;
      margin-top: 10px;
      display: block;
    }
    .custom-search-bar {
      max-width: 100% !important;
      width: 100%;
      margin: 0 !important;
    }
    .custom-search-bar .search-bar-flex {
      max-width: 100%;
      width: 100%;
    }
  }
  @media (max-width: 767px) {
    .custom-search-bar .search-bar-flex {
      height: 44px;
      border-radius: 8px;
    }
    .search-bar-select {
      display: none !important;
    }
    .search-bar-input {
      font-size: 14px;
      padding: 0 10px;
    }
    .search-bar-btn {
      font-size: 14px;
      padding: 0 18px;
      border-radius: 0 8px 8px 0;
    }
  }
</style>
